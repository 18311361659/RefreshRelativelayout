    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mbg.refreshlayout.NestedHorizontalScrollViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
