<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mbg.library.DefaultNegativeRefreshers.BezierRefreshView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:Rect_Width="40dp"
        app:Oval_Width="80dp"
        app:Back_Color="#dddddd"
        android:id="@+id/bezier_view"/>
    <LinearLayout
        android:id="@+id/rightview_move_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/rightview_change_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@drawable/left"/>

        <TextView
            android:id="@+id/dragtoloadmore_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="1"
            android:text="查看更多"
            android:gravity="center"
            android:textSize="10sp"/>

    </LinearLayout>

</RelativeLayout>